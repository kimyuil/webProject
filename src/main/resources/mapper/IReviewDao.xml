<select id="listReview" resultType="com.spring.webProject.dto.ReviewBoardDto">
	select * from review where pId=#{pId}
</select>

<select id="userListReview" resultType="com.spring.webProject.dto.ReviewBoardDto">
	select * from review where uId=#{uId}
</select>

<select id="listLength" resultType="int">
	select count(*) as total from review where pId=#{pid}
</select>

<insert id="writeReivew">
INSERT INTO review (pId, uId, pName, pColor, reDate, uName, reContent, reGrade) 
VALUES (#{pId},#{uId},#{pName},#{pColor},now(),#{uName},#{reContent},#{reGrade});
</insert>

